          "affiliation": {
            "type": "object",
            "description": "The affiliation of the author.",
            "properties": {
              "name": {
                "type": "string",
                "description": "The name of the affiliation."
              },
              "type": {
                "type": "string",
                "description": "Organization or Person"
              }
